{{#extend "template"}}
{{#content "head" mode="append"}}
    <link href="{{CDN 'css/questId.css'}}" rel="stylesheet" type="text/css">
    <script src="https://unpkg.com/react@15/dist/react.min.js"></script>
    <script src="https://unpkg.com/react-dom@15/dist/react-dom.min.js"></script>
{{/content}}

{{#content "body"}}
    <div class="content">
        <div class="content__info block block_gray">
            {{> card/card}}
        </div>
        <div class="content__action actions">
            {{#unless isCreator}}
            <button class="btn btn_gray row__item">
                <span>&#128150;</span>
                <span>{{quest.likesCount}}</span>
            </button>
            {{/unless}}
            {{#if isCreator}}
            <button class="btn btn_gray row__item">
                <span>Удалить квест</span>
            </button>
            <button class="btn btn_gray row__item">
                <span>Изменить квест</span>
            </button>
            {{else}}
            <button class="btn btn_grayrow__item">
                <span>&#128278;</span>
            </button>
            <button class="btn btn_gray row__item">
                <span>Пройти квест</span>
            </button>
            {{/if}}
        </div>
        <div id="comments-root" data-is-auth={{isAuth}} data-slug={{quest.slug}} >
        </div>
    </div>
    <script src="js/questId.js"></script>
{{/content}}
{{/extend}}
