{{#extend "layout"}}
{{#content "head" mode="append"}}
    <link href="{{CDN '/stylesheets/questsAll.css'}}" rel="stylesheet" type="text/css">
{{/content}}

{{#content "content"}}
    <h2 class="page__title">Все квесты</h2>
    {{> searchbar/searchbar }}
    <div class="quests">
        {{#each quests}}
            <div class="quests__item">
                {{> questCard/questCard }}
            </div>
        {{/each}}
    </div>
    {{#if isEmptyQuests}}Квестов нет{{/if}}
{{/content}}
{{/extend}}
